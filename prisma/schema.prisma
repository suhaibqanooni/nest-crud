generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        Int     @id @unique @default(autoincrement())
  name      String
  dob       String
  email     String  @unique
  position  String
  productId Int
  addedById Int
  Product   Product @relation(fields: [productId], references: [id])
  User      User    @relation(fields: [addedById], references: [id])
}

model Product {
  id       Int        @id @default(autoincrement())
  title    String
  price    Int
  category Category
  Employee Employee[]
}

model User {
  id                      Int        @id @default(autoincrement())
  name                    String
  age                     Int
  email                   String     @unique
  role                    Roles
  password                String
  productTableViewColumns String     @default("[\"1\",\"2\",\"3\",\"4\",\"5\",\"6\"]")
  Employee                Employee[]
}

enum Roles {
  ADMIN
  LOCAL
  USER
}

enum Category {
  LAPTOPS
  PRINTERS
}
